extends layout.pug

include utils.pug

block content
    +validationErrorSummary(errors)
    form(action=`/answer/${id}/comments` method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('Content', 'content', comment.content , type="textarea")
        div(class='py-4')
            button(type='submit' class='btn btn-primary') Submit Comment
            a(href='/' class='btn btn-warning ml-2') Cancel
