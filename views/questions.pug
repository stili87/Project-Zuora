      div.main
        each question in questions
          div.question
            div.question_head
              div.user_img
                img(src=question.User.picSrc)
              div.head_text
                div.question_head_upper
                  p= question.User.fullName
                div.question_head_lower
                  p= question.User.credentials
            div.question_body
              div.question_body_title
                p= question.title
              div.question_body_content
                p= question.content
              div.question_body_img
                img(src=question.media)
            div.question_footer
              div.post_answer
                button
                  a(href="#") Post Answer
              div
                button.view_thread_btn View Thread
