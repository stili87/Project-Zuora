extends layout.pug

include utils.pug

block content
    +validationErrorSummary(errors)
    form(action=`/tags` method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('Tag Name', 'name', '', type="input")
        div(class='py-4')
            button(type='submit' ) Submit Tag
            a(href='/' ) Cancel
