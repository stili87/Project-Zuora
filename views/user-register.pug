include utils.pug
doctype html
html
  head
    title="Project Zuora"
    link(rel='stylesheet' href='/stylesheets/user_register_styles.css')
    link(rel='stylesheet' href='/stylesheets/nav.css')
  body
  +navBar()
  h3 Register a user
  +validationErrorSummary(errors)
  .user-register-inner-container
    .user-register-inner
      form(action='/users/register' method='post')
        include user-form.pug
        div(class='py-4')
          button(type='submit' class='register-button') Register
          a(href='/' class='cancel-button') Cancel
