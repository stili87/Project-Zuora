extends layout.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  form(action='/users/register' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Full Name', 'fullName', user.fullName)
    +field('Email Address', 'email', user.email)
    +field('Bio', 'bio', user.bio)
    +field('Credentials', 'credentials', user.credentials)
    +field('Profile Picture URL', 'picSrc', user.picSrc)
    +field('Password', 'password', user.password, 'password')
    +field('Confirm Password', 'confirmPassword', '', 'password')
    div(class='py-4')
      button(type='submit' class='btn btn-primary') Register
      a(href='/' class='btn btn-warning ml-2') Cancel
